- model_class = Professor
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nome)
      %th= model_class.human_attribute_name(:bio_curta)
      %th= model_class.human_attribute_name(:contato)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @professores.each do |professor|
      %tr
        %td= link_to professor.id, professor_path(professor)
        %td= professor.nome
        %td= professor.bio_curta
        %td= professor.contato
        %td=l professor.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_professor_path(professor), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), professor_path(professor), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_professor_path, :class => 'btn btn-primary'
